# {{ ansible_managed }}

CHECK PROCESS {{ services['jenkins']['name'] }} MATCHING "{{ services['jenkins']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['jenkins']['action'] }}
{% if services['jenkins']['action'] != "alert" %}
  REPEAT EVERY {{ services['jenkins']['repeat_interval'] }} CYCLES
{% endif %}
  IF FAILED PORT {{ services['jenkins']['port'] }} FOR 1 CYCLES THEN alert
  group jenkins

