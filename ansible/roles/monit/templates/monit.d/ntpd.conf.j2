# {{ ansible_managed }}

CHECK PROCESS {{ services['ntpd']['name'] }} MATCHING "{{ services['ntpd']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['ntpd']['action'] }}
{% if services['ntpd']['action'] != "alert" %}
  REPEAT EVERY {{ services['ntpd']['repeat_interval'] }} CYCLES
{% endif %}
  group ntpd

