# {{ ansible_managed }}

CHECK PROCESS {{ services['sysklogd']['name'] }} MATCHING "{{ services['sysklogd']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['sysklogd']['action'] }}
{% if services['sysklogd']['action'] != "alert" %}
  REPEAT EVERY {{ services['sysklogd']['repeat_interval'] }} CYCLES
{% endif %}
  group {{ services['sysklogd']['name'] }}

