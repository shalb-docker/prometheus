# {{ ansible_managed }}

CHECK PROCESS {{ services['nginx']['name'] }} MATCHING "{{ services['nginx']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['nginx']['action'] }}
{% if services['nginx']['action'] != "alert" %}
  REPEAT EVERY {{ services['nginx']['repeat_interval'] }} CYCLES
{% endif %}
  IF FAILED PORT {{ services['nginx']['port'] }} FOR 1 CYCLES THEN alert
  group nginx

