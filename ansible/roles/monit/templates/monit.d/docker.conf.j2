# {{ ansible_managed }}

CHECK PROCESS {{ services['docker']['name'] }} MATCHING "{{ services['docker']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['docker']['action'] }}
{% if services['docker']['action'] != "alert" %}
  REPEAT EVERY {{ services['docker']['repeat_interval'] }} CYCLES
{% endif %}
  group {{ services['docker']['name'] }}

