# {{ ansible_managed }}

CHECK PROCESS {{ services['keepalived']['name'] }} MATCHING "{{ services['keepalived']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['keepalived']['action'] }}
{% if services['keepalived']['action'] != "alert" %}
  REPEAT EVERY {{ services['keepalived']['repeat_interval'] }} CYCLES
{% endif %}
  group keepalived

