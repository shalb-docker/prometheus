# {{ ansible_managed }}

CHECK PROCESS {{ services['rundeck']['name'] }} MATCHING "{{ services['rundeck']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['rundeck']['action'] }}
{% if services['rundeck']['action'] != "alert" %}
  REPEAT EVERY {{ services['rundeck']['repeat_interval'] }} CYCLES
{% endif %}
  IF FAILED PORT {{ services['rundeck']['port'] }} PROTOCOL https FOR 1 CYCLES THEN alert
  group rundeck

