# {{ ansible_managed }}

CHECK PROCESS {{ services['sitekit-engine']['name'] }} MATCHING "{{ services['sitekit-engine']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['sitekit-engine']['action'] }}
{% if services['sitekit-engine']['action'] != "alert" %}
  REPEAT EVERY {{ services['sitekit-engine']['repeat_interval'] }} CYCLES
{% endif %}
  group {{ services['sitekit-engine']['name'] }}

