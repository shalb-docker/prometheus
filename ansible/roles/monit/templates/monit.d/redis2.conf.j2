# {{ ansible_managed }}

CHECK PROCESS {{ services['redis2']['name'] }} MATCHING "{{ services['redis2']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['redis2']['action'] }}
{% if services['redis2']['action'] != "alert" %}
  REPEAT EVERY {{ services['redis2']['repeat_interval'] }} CYCLES
{% endif %}
  IF FAILED PORT {{ services['redis2']['port'] }} PROTOCOL redis FOR 1 CYCLES THEN alert
  group redis2

