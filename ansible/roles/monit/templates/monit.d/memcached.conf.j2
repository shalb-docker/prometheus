# {{ ansible_managed }}

CHECK PROCESS {{ services['memcached']['name'] }} MATCHING "{{ services['memcached']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['memcached']['action'] }}
{% if services['memcached']['action'] != "alert" %}
  REPEAT EVERY {{ services['memcached']['repeat_interval'] }} CYCLES
{% endif %}
  IF FAILED PORT {{ services['memcached']['port'] }} FOR 1 CYCLES THEN alert
  group memcached

