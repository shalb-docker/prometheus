# {{ ansible_managed }}

CHECK PROCESS {{ services['postfix']['name'] }} MATCHING "{{ services['postfix']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['postfix']['action'] }}
{% if services['postfix']['action'] != "alert" %}
  REPEAT EVERY {{ services['postfix']['repeat_interval'] }} CYCLES
{% endif %}
  IF FAILED PORT {{ services['postfix']['port'] }} FOR 1 CYCLES THEN alert
  group postfix

