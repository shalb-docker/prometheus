# {{ ansible_managed }}

CHECK PROCESS {{ services['postgresql']['name'] }} MATCHING "{{ services['postgresql']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['postgresql']['action'] }}
{% if services['postgresql']['action'] != "alert" %}
  REPEAT EVERY {{ services['postgresql']['repeat_interval'] }} CYCLES
{% endif %}
  IF FAILED PORT {{ services['postgresql']['port'] }} PROTOCOL pgsql FOR 1 CYCLES THEN alert
  group mysql

