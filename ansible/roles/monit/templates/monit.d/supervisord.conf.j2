# {{ ansible_managed }}

CHECK PROCESS {{ services['supervisord']['name'] }} MATCHING "{{ services['supervisord']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['supervisord']['action'] }}
{% if services['supervisord']['action'] != "alert" %}
  REPEAT EVERY {{ services['supervisord']['repeat_interval'] }} CYCLES
{% endif %}
  group {{ services['supervisord']['name'] }}

