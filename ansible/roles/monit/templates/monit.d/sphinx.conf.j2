# {{ ansible_managed }}

CHECK PROCESS {{ services['sphinx']['name'] }} MATCHING "{{ services['sphinx']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['sphinx']['action'] }}
{% if services['sphinx']['action'] != "alert" %}
  REPEAT EVERY {{ services['sphinx']['repeat_interval'] }} CYCLES
{% endif %}
  IF FAILED PORT {{ services['sphinx']['port'] }} FOR 1 CYCLES THEN alert
  group {{ services['sphinx']['name'] }}

