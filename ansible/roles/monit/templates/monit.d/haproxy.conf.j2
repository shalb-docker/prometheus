# {{ ansible_managed }}

CHECK PROCESS {{ services['haproxy']['name'] }} MATCHING "{{ services['haproxy']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['haproxy']['action'] }}
{% if services['haproxy']['action'] != "alert" %}
  REPEAT EVERY {{ services['haproxy']['repeat_interval'] }} CYCLES
{% endif %}
  IF FAILED PORT {{ services['haproxy']['port'] }} FOR 1 CYCLES THEN alert
  group {{ services['haproxy']['name'] }}

