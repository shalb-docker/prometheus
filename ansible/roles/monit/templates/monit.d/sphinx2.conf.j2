# {{ ansible_managed }}

CHECK PROCESS {{ services['sphinx2']['name'] }} MATCHING "{{ services['sphinx2']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['sphinx2']['action'] }}
{% if services['sphinx2']['action'] != "alert" %}
  REPEAT EVERY {{ services['sphinx2']['repeat_interval'] }} CYCLES
{% endif %}
  IF FAILED PORT {{ services['sphinx2']['port'] }} FOR 1 CYCLES THEN alert
  group {{ services['sphinx2']['name'] }}

