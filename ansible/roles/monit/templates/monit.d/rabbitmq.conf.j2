# {{ ansible_managed }}

CHECK PROCESS {{ services['rabbitmq']['name'] }} MATCHING "{{ services['rabbitmq']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['rabbitmq']['action'] }}
{% if services['rabbitmq']['action'] != "alert" %}
  REPEAT EVERY {{ services['rabbitmq']['repeat_interval'] }} CYCLES
{% endif %}
  IF FAILED PORT {{ services['rabbitmq']['port'] }} FOR 1 CYCLES THEN alert
  group {{ services['rabbitmq']['name'] }}

