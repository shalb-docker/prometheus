# {{ ansible_managed }}

CHECK PROCESS {{ services['opendkim']['name'] }} MATCHING "{{ services['opendkim']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['opendkim']['action'] }}
{% if services['opendkim']['action'] != "alert" %}
  REPEAT EVERY {{ services['opendkim']['repeat_interval'] }} CYCLES
{% endif %}
  IF FAILED PORT {{ services['opendkim']['port'] }} FOR 1 CYCLES THEN alert
  group {{ services['opendkim']['name'] }}

