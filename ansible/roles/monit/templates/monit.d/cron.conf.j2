# {{ ansible_managed }}

CHECK PROCESS {{ services['cron']['name'] }} MATCHING "{{ services['cron']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['cron']['action'] }}
{% if services['cron']['action'] != "alert" %}
  REPEAT EVERY {{ services['cron']['repeat_interval'] }} CYCLES
{% endif %}
  group {{ services['cron']['name'] }}

