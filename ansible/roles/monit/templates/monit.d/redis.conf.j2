# {{ ansible_managed }}

CHECK PROCESS {{ services['redis']['name'] }} MATCHING "{{ services['redis']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['redis']['action'] }}
{% if services['redis']['action'] != "alert" %}
  REPEAT EVERY {{ services['redis']['repeat_interval'] }} CYCLES
{% endif %}
  IF FAILED PORT {{ services['redis']['port'] }} PROTOCOL redis FOR 1 CYCLES THEN alert
  group redis

