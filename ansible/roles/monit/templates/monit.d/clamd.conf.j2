# {{ ansible_managed }}

CHECK PROCESS {{ services['clamd']['name'] }} MATCHING "{{ services['clamd']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['clamd']['action'] }}
{% if services['clamd']['action'] != "alert" %}
  REPEAT EVERY {{ services['clamd']['repeat_interval'] }} CYCLES
{% endif %}
  group {{ services['clamd']['name'] }}

