# {{ ansible_managed }}

CHECK PROCESS {{ services['mongodb']['name'] }} MATCHING "{{ services['mongodb']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['mongodb']['action'] }}
{% if services['mongodb']['action'] != "alert" %}
  REPEAT EVERY {{ services['mongodb']['repeat_interval'] }} CYCLES
{% endif %}
  IF FAILED PORT {{ services['mongodb']['port'] }} FOR 1 CYCLES THEN alert
  group {{ services['mongodb']['name'] }}

