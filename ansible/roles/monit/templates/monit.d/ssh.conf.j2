# {{ ansible_managed }}

CHECK PROCESS {{ services['ssh']['name'] }} MATCHING "{{ services['ssh']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['ssh']['action'] }}
{% if services['ssh']['action'] != "alert" %}
  REPEAT EVERY {{ services['ssh']['repeat_interval'] }} CYCLES
{% endif %}
{% if services['ssh'].get('port') %}
  IF FAILED PORT {{ services['ssh']['port'] }} FOR 1 CYCLES THEN alert
{% endif %}
  group {{ services['ssh']['name'] }}

