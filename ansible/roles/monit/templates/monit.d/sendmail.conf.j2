# {{ ansible_managed }}

CHECK PROCESS {{ services['sendmail']['name'] }} MATCHING "{{ services['sendmail']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['sendmail']['action'] }}
{% if services['sendmail']['action'] != "alert" %}
  REPEAT EVERY {{ services['sendmail']['repeat_interval'] }} CYCLES
{% endif %}
  IF FAILED PORT {{ services['sendmail']['port'] }} FOR 1 CYCLES THEN alert
  group sendmail

