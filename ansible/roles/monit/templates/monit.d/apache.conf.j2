# {{ ansible_managed }}

CHECK PROCESS {{ services['apache']['name'] }} MATCHING "{{ services['apache']['regexp'] }}"
  IF NOT EXIST FOR 1 CYCLES THEN {{ services['apache']['action'] }}
{% if services['apache']['action'] != "alert" %}
  REPEAT EVERY {{ services['apache']['repeat_interval'] }} CYCLES
{% endif %}
  IF FAILED PORT {{ services['apache']['port'] }} FOR 1 CYCLES THEN alert
  group {{ services['apache']['name'] }}

